doctype html
html
    head
        title Retourne l'amphi
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1, user-scalable=no')
        //if lte IE 8
          script(src='js/ie/html5shiv.js')
        link(rel='stylesheet', href='css/main.css')
        //if lte IE 8
          link(rel='stylesheet', href='css/ie8.css')
        //if lte IE 9
          link(rel='stylesheet', href='css/ie9.css')
    body
        // Header
        header#header
            h1 Retourne l'amphi
            h3 Partage ton expérience sur l'éducation d'aujourd'hui,
            h3 Contribue à la révolution de demain.
        // Signup Form
        form#signup-form(method='post' action='/subscription')
            input#email(type='email', name='email', placeholder='Adresse mail' required=true)
            input(type='submit', name='submit' value='Je donne mon avis')

            -if(msg)
                span.message.success.visible !{msg}
            -if(err)
                span.message.failure.visible !{err}

        // Footer
        footer#footer
            ul.icons
                li
                    a.icon.fa-twitter(href='#')
                        span.label Twitter
                li
                    a.icon.fa-facebook(href='#')
                        span.label Facebook
                li
                    a.icon.fa-instagram(href='#')
                        span.label Instagram
                li
                    a.icon.fa-github(href='#')
                        span.label GitHub
                li
                    a.icon.fa-envelope-o(href='#')
                        span.label Email
            ul.copyright
                li &copy; Retourne l'amphi - 2016
        //if lte IE 8
          script(src='js/ie/respond.min.js')
        script(src='js/main.js')
