doctype html
html
    head
        title Retourne Lamphi
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1, user-scalable=no')
        //if lte IE 8
          script(src='js/ie/html5shiv.js')
        link(rel='stylesheet', href='css/main.css')
        //if lte IE 8
          link(rel='stylesheet', href='css/ie8.css')
        //if lte IE 9
          link(rel='stylesheet', href='css/ie9.css')
    body
        // Header
        header#header
            h1 Retourne Lamphi
            p R&eacute;volution de l&apos;&eacute;ducation par la notation libre des &eacute;coles
        // Signup Form
        form#signup-form(method='post' action='/subscription')
            input#email(type='email', name='email', placeholder='Adresse mail')
            input(type='submit', name='submit' value='Je donne mon avis')
            -if(msg)
                span.message.success.visible !{msg}
            -if(err)
                span.message.failure.visible !{err}

        // Footer
        footer#footer
            ul.icons
                li
                    a.icon.fa-twitter(href='#')
                        span.label Twitter
                li
                    a.icon.fa-instagram(href='#')
                        span.label Instagram
                li
                    a.icon.fa-github(href='#')
                        span.label GitHub
                li
                    a.icon.fa-envelope-o(href='#')
                        span.label Email
            ul.copyright
                li &copy; Retourne Lamphi.
        //if lte IE 8
          script(src='js/ie/respond.min.js')
        script(src='js/main.js')